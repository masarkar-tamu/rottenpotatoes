<p style="color: green"><%= notice %></p>

<% content_for :title, "Movies" %>

<h1>Movies</h1>

<table>
  <thead>
    <tr>
      <th><%= link_to 'Title', movies_path(sort: 'title', direction: toggle_direction(params[:direction])) %></th>
      <th><%= link_to 'Rating', movies_path(sort: 'rating', direction: toggle_direction(params[:direction])) %></th>
      <th><%= link_to 'Release Date', movies_path(sort: 'release_date', direction: toggle_direction(params[:direction])) %></th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <div id="movies">
      <% @movies.each do |movie| %>
        <tr>
          <td><%= movie.title %></td>
          <td><%= movie.rating %></td>
          <td><%= movie.release_date.strftime("%d-%b-%Y") %></td>
          <td>
            <%= link_to 'Show', movie_path(movie, sort: params[:sort], direction: params[:direction]) %> |
            <%= link_to 'Edit', edit_movie_path(movie, sort: params[:sort], direction: params[:direction]) %> |
            <%= link_to 'Delete', movie, method: :delete, data: { confirm: 'Are you sure?' }, sort: params[:sort], direction: params[:direction] %>
          </td>
        </tr>
      <% end %>
    </div>
  </tbody>
  <tfoot>
    <tr>
      <td colspan="3"><%= link_to 'New Movie', new_movie_path(sort: params[:sort], direction: params[:direction]) %></td>
    </tr>
  </tfoot>
</table>